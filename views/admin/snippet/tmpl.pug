script#setting-attributes(type="text/x-tmpl").
  {% for (var i=0; i < o.attributes.length; i++) { %}
    <div class="form-group clearfix">
      <label class="col-sm-2 control-label">{%=o.attributes[i].label%}
      {% var size = o.attributes[i].size;
         if (size) { 
           var wh = size.split('x');
      %}
        <div>({%=size%})</div>
      {% } %}
      {% if (o.attributes[i].description) { %}
        <div>({%=o.attributes[i].description%})</div>
      {% } %}
      </label>
      <div class="col-sm-10">
        {% if (o.attributes[i].type == 'text') { %}
          <input type="text" class="form-control" name="{%=o.attributes[i].name%}{%=o.lang%}" placeholder="{%=o.attributes[i].label%}">
        {% } else if (o.attributes[i].type == 'number') { %}
        <input type="number" class="form-control" name="{%=o.attributes[i].name%}" placeholder="{%=o.attributes[i].label%}">
        {% } else if (o.attributes[i].type == 'date') { %}
        <input type="date" class="form-control" name="{%=o.attributes[i].name%}" placeholder="{%=o.attributes[i].label%}">
        {% } else if (o.attributes[i].type == 'checkbox') { %}
        <input type="checkbox" name="{%=o.attributes[i].name%}">
        {% } else if (o.attributes[i].type == 'radio') { %}
          {% for (var j=0; j < o.attributes[i].options.length; j++) { %}
            <div class="radio">
              <label><input type="radio" name="{%=o.attributes[i].name%}" value="{%=o.attributes[i].options[j].value%}">{%=o.attributes[i].options[j].title%}</label>
            </div>
          {% } %}
        {% } else if (o.attributes[i].type == 'select') { %}
          {% var multiple = ''
            var check_multiple = o.attributes[i].multiple;
            if (check_multiple) var multiple = 'multiple';
          %}
        <select class="form-control" name="{%=o.attributes[i].name%}" {%=multiple%}>
          {% for (var j=0; j < o.attributes[i].options.length; j++) { %}
            <option value="{%=o.attributes[i].options[j].value%}">{%=o.attributes[i].options[j].title%}</option>
          {% } %}
        </select>
        {% } else if (o.attributes[i].type == 'image') { %}
          <div data-default="/static/img/default.jpg" class="item-choose-image" data-width="{%=wh[0]%}" data-height="{%=wh[1]%}">
            <img src="/static/img/default.jpg">
            <span class="remove-image">
              <i class="fa fa-times"></i>
            </span>
            <input type="hidden" name="{%=o.attributes[i].name%}{%=o.lang%}" class="value">
          </div>
          <div class="db-btn-design-me" data-db-width="{%=wh[0]%}" data-db-height="{%=wh[1]%}" data-db-unit="px" data-db-title="Design Bold"> </div>
        {% } else if (o.attributes[i].type == 'textarea') { %}
          <textarea class="form-control" name="{%=o.attributes[i].name%}{%=o.lang%}" placeholder="{%=o.attributes[i].label%}" rows="5"></textarea>
        {% } else if (o.attributes[i].type == 'editor') { %}
          <textarea class="form-control tinymce" name="{%=o.attributes[i].name%}{%=o.lang%}"></textarea>
        {% } else if (o.attributes[i].type == 'tag') { %}
          <input class="form-control tagsinput" name="{%=o.attributes[i].name%}{%=o.lang%}" placeholder="{%=o.attributes[i].label%}">
        {% } else if (o.attributes[i].type == 'file') { %}
          <div class="upload-file">
            <input type="file">
            <input type="hidden" name="{%=o.attributes[i].name%}" class="value file">
            <button class="btn-upload-file">
              <i class="fa fa-circle-o-notch fa-spin"></i>
              <span>Upload</span>
            </button>
          </div>
        {% } else if (o.attributes[i].type == 'article') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="article">
            <input class="search-object" placeholder="Tìm bài viết...">
          </div>
        {% } else if (o.attributes[i].type == 'articles') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="article" data-multiple="true">
            <input class="search-object" placeholder="Tìm bài viết...">
          </div>
        {% } else if (o.attributes[i].type == 'blog') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="blog">
            <input class="search-object" placeholder="Tìm nhóm bài viết...">
          </div>
        {% } else if (o.attributes[i].type == 'blogs') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="blog" data-multiple="true">
            <input class="search-object" placeholder="Tìm nhóm bài viết...">
          </div>
        {% } else if (o.attributes[i].type == 'product') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="product">
            <input class="search-object" placeholder="Tìm sản phẩm...">
          </div>
        {% } else if (o.attributes[i].type == 'products') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="product" data-multiple="true">
            <input class="search-object" placeholder="Tìm sản phẩm...">
          </div>
        {% } else if (o.attributes[i].type == 'collection') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="collection">
            <input class="search-object" placeholder="Tìm nhóm sản phẩm...">
          </div>
        {% } else if (o.attributes[i].type == 'collections') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="collection" data-multiple="true">
            <input class="search-object" placeholder="Tìm nhóm sản phẩm...">
          </div>
        {% } else if (o.attributes[i].type == 'page') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="page">
            <input class="search-object" placeholder="Tìm nhóm sản phẩm...">
          </div>
        {% } else if (o.attributes[i].type == 'pages') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="page" data-multiple="true">
            <input class="search-object" placeholder="Tìm nhóm sản phẩm...">
          </div>
        {% } else if (o.attributes[i].type == 'gallery') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="gallery">
            <input class="search-object" placeholder="Tìm gallery...">
