        {% } else if (o.attributes[i].type == 'galleries') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="gallery" data-multiple="true">
            <input class="search-object" placeholder="Tìm gallery...">
          </div>
        {% } else if (o.attributes[i].type == 'maps') { %}
          <div class="box-object-setting" data-name="{%=o.attributes[i].name%}" data-type="maps">
            <input class="form-control" id="google-address" type="text" name="{%=o.attributes[i].name%}" placeholder="Nhập địa chỉ để tìm kiếm">
          </div>
