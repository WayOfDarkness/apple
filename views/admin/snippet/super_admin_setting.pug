          .box-header
            h3.box-title
              .col-xs-12 Phân trang
          .box-body
            .form-horizontal
              .col-xs-12
                .form-group.clearfix
                  label.col-md-2.col-sm-5.control-label Số sản phẩm ở trang nhóm sản phẩm
                  .col-md-10.col-sm-7
                    input.form-control(type="number" name='setting_collection_perpage' placeholder="20")
                .form-group.clearfix
                  label.col-md-2.col-sm-5.control-label Số bài viết ở trang nhóm bài viết
                  .col-md-10.col-sm-7
                    input.form-control(type="number" name='setting_blog_perpage' placeholder="20")
                .form-group.clearfix
                  label.col-md-2.col-sm-5.control-label Số sản phẩm ở trang tìm kiếm
                  .col-md-10.col-sm-7
                    input.form-control(type="number" name='setting_search_product_perpage' placeholder="20")
                .form-group.clearfix
                  label.col-md-2.col-sm-5.control-label Số bài viết ở trang tìm kiếm
                  .col-md-10.col-sm-7
                    input.form-control(type="number" name='setting_search_article_perpage' placeholder="20")
