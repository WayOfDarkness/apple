                div(style="font-size: 16px; margin-top: 5px;") (Sử dụng cho bộ lọc)
            .box-body
              if countArr(attributes)
                table.table.table-condensed.table-bordered.table-striped(cellspacing="0" width="100%"  style="margin-bottom: 20px;")
                  thead
                    tr
                      th STT
                      th Tên thuộc tính
                      th Trạng thái
                      th Ngày cập nhật
                      th Chỉnh sửa
                  tbody
                    each item, index in attributes
                      tr
                        td.text-center=(index + 1)
                        td=item.name
                        td
                          if item.status
                            label.label.label-success Có
                          else
                            label.label.label-danger Không
                        td=item.updated_at
                        td
