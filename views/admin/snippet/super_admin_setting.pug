extends ./../layout.pug

block pre-include
  - var menu = 'user';
  - var childMenu = 'setting';
  title Thiết lập admin

block post-include
  script(src=staticURI() +'/js/admin/super_admin_setting.js')

block content
  section.content-header.clearfix
    ol.breadcrumb.col-md-8.col-sm-7
      li
        a Quản trị viên
      li
        a Thiết lập admin
        
    ol.button-right.col-md-4.col-sm-5.col-xs-12
      span.middle-inline-block
      li
        a.btn.btn-admin.btn-restore-setting
          i.fa.fa-undo
          | Phục hồi phiên bản cũ
      li.item-restore.hidden
        select(name="change_version_setting")
          option(value="" disabled selected) Phiên bản cũ hơn
      li
        a.btn.btn-admin.btn-update-setting-website
          i.fa.fa-floppy-o
          i.fa.fa-circle-o-notch.fa-spin
          | Lưu lại
  section.content#content(style="padding-bottom:150px")
    ul.nav.nav-pills
      li.active
        a(data-toggle="pill", href="#website-setting") Website
      li
        a(data-toggle="pill", href="#product") Sản phẩm
      li
        a(data-toggle="pill", href="#note-picture") Note kích thước ảnh
      li
        a(data-toggle="pill", href="#url-setting") Url Setting
      li
        a(data-toggle="pill", href="#api-setting") API Key
      li
        a(data-toggle="pill" href="#template-mail") Template Mail
      li
        a(data-toggle="pill" href="#pick-address") Địa chỉ gửi hàng
    .tab-content
      #website-setting.tab-pane.fade.in.active
